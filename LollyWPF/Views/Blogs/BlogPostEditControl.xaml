<UserControl x:Class="LollyWPF.BlogPostEditControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:wpf="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
             xmlns:cef="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
             xmlns:common="clr-namespace:LollyCommon;assembly=LollyCommon"
             xmlns:mx="http://compiledbindings.com/x"
             mc:Ignorable="d mx"
             d:DataContext="{d:DesignInstance Type=common:BlogPostEditViewModel}"
             mx:DataType="common:BlogPostEditViewModel"
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <ToolBarTray DockPanel.Dock="Top" IsLocked="True">
            <ToolBar Band="1">
                <Button Content="Save" Click="btnSave_Click"/>
                <Button Content="HtmlToMarked" Command="{x:Bind HtmlToMarkedCommand}"/>
                <Button x:Name="btnAddTagB" Content="Add B" Click="btnAddTagB_Click"/>
                <Button x:Name="btnAddTagI" Content="Add I" Click="btnAddTagI_Click"/>
                <Button x:Name="btnRemoveTagBI" Content="Remove BI" Click="btnRemoveTagBI_Click"/>
                <Button x:Name="btnExchangeTagBI" Content="Exchange BI" Click="btnExchangeTagBI_Click"/>
                <Button x:Name="btnAddExplanation" Content="AddExplanation" Click="btnAddExplanation_Click"/>
                <Button x:Name="btnMarkedToHtml" Content="MarkedToHtml" Click="btnMarkedToHtml_Click"/>
                <Button x:Name="btnPatternToHtml" Content="PatternToHtml" Click="btnPatternToHtml_Click"/>
                <TextBox Text="{x:Bind PatternNo, Mode=TwoWay}" Width="60" wpf:HintAssist.Hint="Pattern No." />
                <Button Content="AddNotes" Command="{x:Bind AddNotesCommand}"/>
            </ToolBar>
        </ToolBarTray>  
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <TextBox x:Name="tbMarked" Text="{x:Bind MarkedText, Mode=TwoWay}" Grid.Row="0" AcceptsReturn="True" TextWrapping="Wrap" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"></TextBox>
                <GridSplitter Grid.Row="1" ResizeDirection="Rows" HorizontalAlignment="Stretch"/>
                <TextBox Text="{x:Bind HtmlText, Mode=TwoWay}" Grid.Row="2" AcceptsReturn="True" TextWrapping="Wrap"></TextBox>
            </Grid>
            <GridSplitter Grid.Column="1" ResizeDirection="Columns" HorizontalAlignment="Stretch"/>
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox Text="{x:Bind Title, Mode=TwoWay}" />
                <Button x:Name="btnEditPost" Content="Edit" IsEnabled="{x:Bind IsLangBlogPost}" Click="btnEditPost_Click" Grid.Column="1" />
                <cef:ChromiumWebBrowser Grid.Row="1" Grid.ColumnSpan="2" x:Name="wbPost" />
            </Grid>
        </Grid>
    </DockPanel>
</UserControl>
