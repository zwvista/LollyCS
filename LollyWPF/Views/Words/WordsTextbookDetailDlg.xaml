<Window x:Class="LollyWPF.WordsTextbookDetailDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LollyWPF"
        xmlns:common="clr-namespace:LollyCommon;assembly=LollyCommon"
        xmlns:mx="http://compiledbindings.com/x"
        mc:Ignorable="d mx"
        d:DataContext="{d:DesignInstance Type=common:MUnitWordEdit}"
        mx:DataType="common:MUnitWordEdit"
        Title="Words in Textbook Details" Height="700" Width="800" WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <Style TargetType="Label" BasedOn="{StaticResource MaterialDesignLabel}">
            <Setter Property="Margin" Value="0,0,10,0" />
        </Style>
        <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignTextBox}">
            <Setter Property="Margin" Value="0,0,0,10" />
        </Style>
        <Style TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignComboBox}">
            <Setter Property="Margin" Value="0,0,0,10" />
        </Style>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Content="ID:" Grid.Row="0" />
        <TextBox Text="{x:Bind ID}" Grid.Row="0" Grid.Column="1" IsReadOnly="True" />
        <Label Content="TEXTBOOK:" Grid.Row="1" />
        <TextBox Text="{x:Bind TEXTBOOKNAME}" Grid.Row="1" Grid.Column="1" IsReadOnly="True" />
        <Label Content="UNIT:" Grid.Row="2" />
        <ComboBox x:Name="cbTextbook" ItemsSource="{x:Bind Textbook.Units}" DisplayMemberPath="Label" SelectedValuePath="Value" SelectedValue="{x:Bind UNIT}"
                  Grid.Row="2" Grid.Column="1" />
        <Label Content="PART:" Grid.Row="3" />
        <ComboBox x:Name="cbPart" ItemsSource="{x:Bind Textbook.Parts}" DisplayMemberPath="Label" SelectedValuePath="Value" SelectedValue="{x:Bind PART}"
                  Grid.Row="3" Grid.Column="3" />
        <Label Content="SEQNUM:" Grid.Row="4" />
        <TextBox Text="{x:Bind SEQNUM}" Grid.Row="4" Grid.Column="1" />
        <Label Content="WORDID:" Grid.Row="5" />
        <TextBox Text="{x:Bind WORDID}" Grid.Row="5" Grid.Column="1" IsReadOnly="True" />
        <Label Content="WORD:" Grid.Row="6" />
        <TextBox x:Name="tbWord" Text="{x:Bind WORD}" Grid.Row="6" Grid.Column="1" />
        <Label Content="NOTE:" Grid.Row="7" />
        <TextBox Text="{x:Bind NOTE}" Grid.Row="7" Grid.Column="1" />
        <Label Content="FAMIID:" Grid.Row="8" />
        <TextBox Text="{x:Bind FAMIID}" Grid.Row="8" Grid.Column="1" IsReadOnly="True" />
        <Label Content="ACCURACY:" Grid.Row="9" />
        <TextBox Text="{x:Bind ACCURACY,Mode=OneWay}" Grid.Row="9" Grid.Column="1" IsReadOnly="True" />
        <DataGrid x:Name="dgWords" SelectionMode="Single" AutoGenerateColumns="False" ItemsSource="{x:Bind WordItems, DataType=common:SingleWordViewModel}" IsReadOnly="True"
                  Grid.Row="10" Grid.ColumnSpan="2" Margin="0,10,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding TEXTBOOKNAME}" Header="TEXTBOOKNAME" />
                <DataGridTextColumn Binding="{Binding UNITSTR}" Header="UNIT" />
                <DataGridTextColumn Binding="{Binding PARTSTR}" Header="PART" />
                <DataGridTextColumn Binding="{Binding SEQNUM}" Header="SEQNUM" />
                <DataGridTextColumn Binding="{Binding WORD}" Header="WORD" />
                <DataGridTextColumn Binding="{Binding NOTE}" Header="NOTE" />
                <DataGridTextColumn Binding="{Binding ACCURACY}" Header="ACCURACY" />
                <DataGridTextColumn Binding="{Binding WORDID}" Header="WORDID" />
                <DataGridTextColumn Binding="{Binding ID}" Header="ID" />
                <DataGridTextColumn Binding="{Binding FAMIID}" Header="FAMIID" />
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="11" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="75" local:ButtonHelper.DialogResult="True" Command="{x:Bind Save}"/>
            <Button Content="Cancel" Width="75" IsCancel="True" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
