<UserControl x:Class="LollyWPF.OnlineTextbooksControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LollyWPF"
             xmlns:common="clr-namespace:LollyCommon;assembly=LollyCommon"
             xmlns:wpf="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
             xmlns:cef="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
             xmlns:mx="http://compiledbindings.com/x"
             mc:Ignorable="d mx"
             d:DataContext="{d:DesignInstance Type=common:OnlineTextbooksViewModel}"
             mx:DataType="common:OnlineTextbooksViewModel"
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <ToolBarTray DockPanel.Dock="Top" IsLocked="True">
            <ToolBar x:Name="ToolBar1" Band="1">
                <Button x:Name="btnRefresh" Content="Refresh" Click="btnRefresh_Click"/>
                <ComboBox x:Name="cbOnlineTextbookFilter" ItemsSource="{x:Bind vmSettings.OnlineTextbookFilters}" DisplayMemberPath="Label" SelectedValuePath="Value"
                          SelectedValue="{x:Bind OnlineTextbookFilter, Mode=TwoWay}" />
            </ToolBar>
        </ToolBarTray>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <DockPanel>
                <StatusBar DockPanel.Dock="Bottom">
                    <Label Content="{x:Bind StatusText}"/>
                </StatusBar>
                <DataGrid x:Name="dgOnlineTextbooks" SelectionMode="Single" AutoGenerateColumns="False" CanUserAddRows="False" ItemsSource="{x:Bind Items}"
                          SelectedItem="{x:Bind SelectedOnlineTextbookItem, Mode=TwoWay}" SelectionChanged="dgOnlineTextbooks_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding TEXTBOOKNAME}" Header="TEXTBOOKNAME" IsReadOnly="True" />
                        <DataGridTextColumn Binding="{Binding UNIT}" Header="UNIT" IsReadOnly="True" />
                        <DataGridTextColumn Binding="{Binding TITLE}" Header="TITLE" IsReadOnly="True" />
                        <DataGridTextColumn Binding="{Binding URL}" Header="URL" IsReadOnly="True" />
                        <DataGridTextColumn Binding="{Binding ID}" Header="ID" IsReadOnly="True" />
                        <DataGridTextColumn Binding="{Binding TEXTBOOKID}" Header="TEXTBOOKID" IsReadOnly="True" />
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
            <GridSplitter Grid.Column="1" Style="{StaticResource VerticalGridSplitter}" />
            <cef:ChromiumWebBrowser x:Name="wbWebPage" Grid.Column="2"/>
        </Grid>
    </DockPanel>
</UserControl>
