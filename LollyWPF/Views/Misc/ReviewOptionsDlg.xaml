<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LollyWPF"
        xmlns:common="clr-namespace:LollyCommon;assembly=LollyCommon"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" x:Class="LollyWPF.ReviewOptionsDlg"
        xmlns:mx="http://compiledbindings.com/x"
        mc:Ignorable="d mx"
        d:DataContext="{d:DesignInstance Type=common:MReviewOptions}"
        mx:DataType="common:MReviewOptions"
        Title="Review Options" Height="360" Width="360" WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <local:EnumConverter x:Key="EnumConverter"/>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Content="Mode:" VerticalAlignment="Center" Grid.Row="0" />
        <ComboBox x:Name="cbModes" ItemsSource="{x:Bind common:SettingsViewModel.ReviewModes}" DisplayMemberPath="Label" SelectedValuePath="Value"
                  SelectedValue="{Binding Mode, ConverterParameter={x:Type common:ReviewMode}, Converter={StaticResource EnumConverter}}"
                  HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="0" Grid.Column="1" />
        <CheckBox Content="Speaking Enabled" IsChecked="{x:Bind SpeakingEnabled}" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" />
        <CheckBox Content="Shuffled" IsChecked="{x:Bind Shuffled}" VerticalAlignment="Center" Grid.Row="2" Grid.Column="1" />
        <CheckBox Content="On Repeat" IsChecked="{x:Bind OnRepeat}" VerticalAlignment="Center" Grid.Row="3" Grid.Column="1" />
        <CheckBox Content="Forward" IsChecked="{x:Bind MoveForward}" VerticalAlignment="Center" Grid.Row="4" Grid.Column="1" />
        <Label Content="Interval:" VerticalAlignment="Center" Grid.Row="5" />
        <xctk:IntegerUpDown Value="{x:Bind Interval}" Grid.Row="5" Grid.Column="1" Width="75" HorizontalAlignment="Left" VerticalAlignment="Center" Minimum="1" Maximum="10"/>
        <Label Content="Group:" VerticalAlignment="Center" Grid.Row="6" />
        <StackPanel Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Horizontal">
            <xctk:IntegerUpDown Value="{x:Bind GroupSelected}" Width="75" VerticalAlignment="Center" Minimum="1"/>
            <Label Content="out of" VerticalAlignment="Center" Grid.Row="3" />
            <xctk:IntegerUpDown Value="{x:Bind GroupCount}" Width="75" VerticalAlignment="Center" Minimum="1"/>
        </StackPanel>
        <Label Content="Review Count:" VerticalAlignment="Center" Grid.Row="7" />
        <xctk:IntegerUpDown Value="{x:Bind ReviewCount}" Grid.Row="7" Grid.Column="1" Width="75" HorizontalAlignment="Left" VerticalAlignment="Center" Minimum="10" Maximum="100"/>
        <StackPanel Grid.Row="8" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="75" IsDefault="True" Click="btnOK_Click"/>
            <Button Content="Cancel" Width="75" IsCancel="True" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
