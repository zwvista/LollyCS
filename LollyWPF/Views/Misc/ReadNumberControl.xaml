<UserControl x:Class="LollyWPF.ReadNumberControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:common="clr-namespace:LollyCommon;assembly=LollyCommon"
             xmlns:mx="http://compiledbindings.com/x"
             mc:Ignorable="d mx"
             d:DataContext="{d:DesignInstance Type=common:ReadNumberViewModel}"
             mx:DataType="common:ReadNumberViewModel"
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <ToolBarTray DockPanel.Dock="Top" IsLocked="True">
            <ToolBar x:Name="ToolBar1" Band="1">
            </ToolBar>
        </ToolBarTray>  
        <Grid Margin="10">
            <Grid.Resources>
                <Style TargetType="Label">
                    <Setter Property="FontSize" Value="24" />
                </Style>
                <Style TargetType="TextBox">
                    <Setter Property="FontSize" Value="24" />
                </Style>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <TextBox Text="{x:Bind Number, Mode=TwoWay}" VerticalAlignment="Center" Grid.Row="0" />
            <TextBox Text="{x:Bind Text, Mode=TwoWay}" VerticalAlignment="Center" Grid.Row="1" />
            <Button x:Name="btnRead" Grid.Row="2" Content="Read" Width="100" HorizontalAlignment="Right" Command="{x:Bind ReadNumberCommand}" />
        </Grid>
    </DockPanel>
</UserControl>
