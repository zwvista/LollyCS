@page "/WordsUnit"
@inject IDialogService Dialog

<RequireAuth>

<MudToolBar>
    <MudTextField @bind-Value="vm.NewWord" Label="New Word" Variant="Variant.Text" OnKeyDown="@OnKeyDownNewWord"></MudTextField>
    <MudTooltip Text="Speak" Arrow="true" Placement="Placement.Top">
        <MudFab StartIcon="fa fa-volume-up" Color="Color.Primary" />
    </MudTooltip>
    <MudSelect @bind-Value="vm.ScopeFilter">
        @foreach (var item in SettingsViewModel.ScopeWordFilters)
        {
            <MudSelectItem Value="@item">@item</MudSelectItem>
        }   
    </MudSelect>
    <MudTextField @bind-Value="vm.TextFilter" Label="Filter" Variant="Variant.Text"></MudTextField>
    <MudButton Variant="Variant.Filled" StartIcon="fa fa-plus" Color="Color.Primary">Add</MudButton>
    <MudButton Variant="Variant.Filled" StartIcon="fa fa-sync" Color="Color.Primary">Refresh</MudButton>
    <MudCheckBox @bind-Value="vm.IfEmpty">If Empty</MudCheckBox>
    <MudButton Variant="Variant.Filled" Color="Color.Warning" OnClick="@GetNotes">Get Notes</MudButton>
    <MudButton Variant="Variant.Filled" Color="Color.Warning" OnClick="@ClearNotes">Clear Notes</MudButton>
    <MudButton Variant="Variant.Filled" StartIcon="fa fa-book" Color="Color.Primary">Dictionary</MudButton>
</MudToolBar>

<MudTable Items="@vm.WordItems">
    <HeaderContent>
        <MudTh>No.</MudTh>
        <MudTh>ID</MudTh>
        <MudTh>UNIT</MudTh>
        <MudTh>PART</MudTh>
        <MudTh>SEQNUM</MudTh>
        <MudTh>WORDID</MudTh>
        <MudTh>WORD</MudTh>
        <MudTh>NOTE</MudTh>
        <MudTh>ACCURACY</MudTh>
        <MudTh>ACTIONS</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd></MudTd>
        <MudTd>@context.ID</MudTd>
        <MudTd>@context.UNITSTR</MudTd>
        <MudTd>@context.PARTSTR</MudTd>
        <MudTd>@context.SEQNUM</MudTd>
        <MudTd>@context.WORDID</MudTd>
        <MudTd>@context.WORD</MudTd>
        <MudTd>@context.NOTE</MudTd>
        <MudTd>@context.ACCURACY</MudTd>
        <MudTd>
            <MudTooltip Text="Delete" Arrow="true" Placement="Placement.Top">
                <MudFab StartIcon="fa fa-trash" Color="Color.Secondary"/>
            </MudTooltip>
            <MudTooltip Text="Edit" Arrow="true" Placement="Placement.Top">
                <MudFab StartIcon="fa fa-edit" Color="Color.Primary" OnClick="@(() => ShowDetailDialog(context))"/>
            </MudTooltip>
            <MudTooltip Text="Speak" Arrow="true" Placement="Placement.Top">
                <MudFab StartIcon="fa fa-volume-up" Color="Color.Primary"/>
            </MudTooltip>
            <MudTooltip Text="Copy" Arrow="true" Placement="Placement.Top">
                <MudFab StartIcon="fa fa-copy" Color="Color.Primary"/>
            </MudTooltip>
            <MudTooltip Text="Google Word" Arrow="true" Placement="Placement.Top">
                <MudFab StartIcon="fab fa-google" Color="Color.Primary"/>
            </MudTooltip>
            <MudTooltip Text="Dictionary" Arrow="true" Placement="Placement.Top">
                <MudFab StartIcon="fa fa-book" Color="Color.Primary"/>
            </MudTooltip>
            <MudButton Variant="Variant.Filled" Color="Color.Warning" OnClick="@(() => GetNote(context))">Get Note</MudButton>
            <MudButton Variant="Variant.Filled" Color="Color.Warning" OnClick="@(() => ClearNote(context))">Clear Note</MudButton>
        </MudTd>
    </RowTemplate>
</MudTable>

</RequireAuth>

@code {
    WordsUnitViewModel vm = new(App.vmSettings, true, false);

    protected override void OnInitialized()
    {
        vm.PropertyChanged += (_, __) => InvokeAsync(StateHasChanged);
    }

    async Task OnKeyDownNewWord(KeyboardEventArgs e)
    {
        if (e.Key != "Enter" || string.IsNullOrEmpty(vm.NewWord)) return;
        await vm.AddNewWord();
    }

    async Task ShowDetailDialog(MUnitWord item)
    {
        var parameters = new DialogParameters<WordsUnitDetail> { { x => x.Item, item } };
        var options = new DialogOptions { CloseOnEscapeKey = true };
        var dialog = await Dialog.ShowAsync<WordsUnitDetail>("Simple Dialog", parameters, options);
        var result = await dialog.Result;
        if (!result.Canceled)
        {
        }
    }

    async Task GetNote(MUnitWord item) =>
        await vm.GetNote(item);

    async Task ClearNote(MUnitWord item) =>
        await vm.ClearNote(item);

    async Task GetNotes() =>
        await vm.GetNotes(_ => { });

    async Task ClearNotes() =>
        await vm.ClearNotes(_ => { });
}
