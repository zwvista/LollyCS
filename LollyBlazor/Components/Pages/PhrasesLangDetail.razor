<MudDialog>
    <TitleContent>
        Dialog Title
    </TitleContent>
    <DialogContent>
        <MudTextField Value="@Item.ID" Label="ID" Variant="Variant.Text" Disabled="true"></MudTextField>
        <MudTextField Value="@Item.PHRASE" Label="PHRASE" Variant="Variant.Text"></MudTextField>
        <MudTextField Value="@Item.TRANSLATION" Label="TRANSLATION" Variant="Variant.Text"></MudTextField>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="@Submit">OK</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] 
    IMudDialogInstance MudDialog { get; set; }
    [Parameter]
    public MLangPhrase Item { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}
