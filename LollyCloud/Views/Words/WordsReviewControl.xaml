<UserControl x:Class="LollyCloud.WordsReviewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LollyCloud"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <DockPanel>
        <ToolBarTray DockPanel.Dock="Top" IsLocked="True">
            <ToolBar Band="2">
                <Button Content="New Test" Click="btnNewTest_Click"/>
                <CheckBox Content="Speak?" IsChecked="{Binding IsSpeaking}" />
            </ToolBar>
        </ToolBarTray>
        <Grid Margin="10">
            <Grid.Resources>
                <Style TargetType="Label">
                    <Setter Property="FontSize" Value="24" />
                </Style>
                <Style TargetType="TextBox">
                    <Setter Property="FontSize" Value="24" />
                </Style>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <DockPanel Grid.Row="0" HorizontalAlignment="Stretch">
                <Label Content="{Binding IndexString}" Visibility="{Binding IndexVisibility}" DockPanel.Dock="Left"/>
                <Label Visibility="{Binding CorrectVisibility}" Content="Correct" Foreground="Green" DockPanel.Dock="Left" />
                <Label Visibility="{Binding IncorrectVisibility}" Content="Incorrect" Foreground="Red" DockPanel.Dock="Left" />
                <Label Content="{Binding AccuracyString}" Visibility="{Binding AccuracyVisibility}" HorizontalAlignment="Right" DockPanel.Dock="Right" />
            </DockPanel>
            <StackPanel Grid.Row="1" Orientation="Horizontal">
                <Label Content="{Binding WordTargetString}" Foreground="Orange" />
                <Label Content="{Binding NoteTargetString}" Foreground="Pink" />
            </StackPanel>
            <TextBox Text="{Binding TranslationString}" TextWrapping="Wrap" Grid.Row="2" />
            <TextBox x:Name="tbWordInput" Text="{Binding WordInputString}" VerticalAlignment="Center" Grid.Row="3" KeyDown="tbWordInput_KeyDown" />
            <Button Grid.Row="4" Content="{Binding CheckString}" IsEnabled="{Binding CheckEnabled}" Width="100" HorizontalAlignment="Right" Click="btnCheck_Click"/>
        </Grid>
    </DockPanel>
</UserControl>
