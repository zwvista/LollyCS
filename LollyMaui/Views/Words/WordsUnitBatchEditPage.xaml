<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LollyMaui.WordsUnitBatchEditPage"
             Title="Words in Unit(Batch Edit)"
             xmlns:common="clr-namespace:LollyCommon;assembly=LollyCommon"
             xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             x:DataType="common:WordsUnitBatchEditViewModel">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Clicked="OnSave" Priority="0" Order="Primary" />
        <ToolbarItem Text="Cancel" Clicked="OnCancel" Priority="1" Order="Primary" />
    </ContentPage.ToolbarItems>
    <Grid Padding="10" RowDefinitions="Auto,Auto,Auto,*" ColumnDefinitions="Auto,Auto,*">
        <CheckBox IsChecked="{x:Bind UnitChecked}"/>
        <Label Grid.Column="1" Text="UNIT:" VerticalTextAlignment="Center" />
        <Picker Grid.Column="2" IsEnabled="{x:Bind UnitChecked}" ItemsSource="{x:Bind Textbook.Units}" ItemDisplayBinding="{x:Bind Label}" SelectedItem="{x:Bind UNITItem}" />
        <CheckBox Grid.Row="1" IsChecked="{x:Bind PartChecked}"/>
        <Label Grid.Row="1" Grid.Column="1" Text="PART:" VerticalTextAlignment="Center" />
        <Picker Grid.Row="1" IsEnabled="{x:Bind PartChecked}" Grid.Column="2" ItemsSource="{x:Bind Textbook.Parts}" ItemDisplayBinding="{x:Bind Label}" SelectedItem="{x:Bind PARTItem}" />
        <CheckBox Grid.Row="2" IsChecked="{x:Bind SeqNumChecked}"/>
        <Label Grid.Row="2" Grid.Column="1" Text="SEQNUM(+):" VerticalTextAlignment="Center" />
        <Entry Grid.Row="2" Grid.Column="2" IsEnabled="{x:Bind SeqNumChecked}" Text="{x:Bind SEQNUM, Mode=TwoWay}" Keyboard="Numeric" />
        <CollectionView Grid.Row="3" Grid.ColumnSpan="3" ItemsSource="{x:Bind vm.WordItems}" SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid x:DataType="common:MUnitWord" ColumnDefinitions="Auto,*,Auto">
                        <StackLayout Spacing="2" VerticalOptions="Center">
                            <Label Text="{x:Bind UNITSTR, Mode=TwoWay}" Style="{StaticResource Key=Text1}" />
                            <Label Text="{x:Bind PARTSTR, Mode=TwoWay}" Style="{StaticResource Key=Text1}" />
                            <Label Text="{x:Bind SEQNUM, Mode=TwoWay}" Style="{StaticResource Key=Text1}" />
                        </StackLayout>
                        <StackLayout Grid.Column="1" VerticalOptions="Center">
                            <Label Text="{x:Bind WORD, Mode=TwoWay}" Style="{StaticResource Key=Text2}" />
                            <Label Text="{x:Bind NOTE, Mode=TwoWay}" Style="{StaticResource Key=Text3}" />
                        </StackLayout>
                        <ImageButton Grid.Column="2" Source="{mi:FontAwesomeSolid Icon=AngleRight,IconColor=Red}"
                                            WidthRequest="20" HeightRequest="20" IsVisible="{x:Bind IsChecked}" />
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnItemTapped" CommandParameter="{x:Bind .}" />
                        </Grid.GestureRecognizers>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
