<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Class="LollyMaui.WordsUnitPage"
             Title="Words in Unit"
             xmlns:common="clr-namespace:LollyCommon;assembly=LollyCommon"
             x:DataType="common:WordsUnitViewModel"
             xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add" Clicked="ToolbarItemAdd_Clicked" />
        <ToolbarItem Text="More" Clicked="ToolbarItemMore_Clicked" />
    </ContentPage.ToolbarItems>
    <Grid Padding="10" RowDefinitions="Auto,*" ColumnDefinitions="*,Auto">
        <SearchBar Placeholder="Filter" Text="{x:Bind TextFilter, Mode=TwoWay}" />
        <Picker Grid.Column="1" ItemsSource="{Binding Source={x:Static common:SettingsViewModel.ScopeWordFilters}}" SelectedItem="{x:Bind ScopeFilter}" />
        <RefreshView Grid.Row="1" Grid.ColumnSpan="2" x:DataType="common:WordsUnitViewModel" Command="{x:Bind ReloadCommand}" IsRefreshing="{x:Bind IsBusy}">
            <CollectionView ItemsSource="{x:Bind WordItems}" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView>
                            <SwipeView.LeftItems>
                                <SwipeItems>
                                    <SwipeItem Text="Edit"
                                               BackgroundColor="LightBlue"
                                               Invoked="OnEditSwipeItemInvoked" />
                                </SwipeItems>
                            </SwipeView.LeftItems>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="More"
                                               BackgroundColor="LightGreen"
                                               Invoked="OnMoreSwipeItemInvoked" />
                                    <SwipeItem Text="Delete"
                                               BackgroundColor="LightPink"
                                               Invoked="OnDeleteSwipeItemInvoked" />
                                </SwipeItems>
                            </SwipeView.RightItems>
                            <Grid Padding="10" x:DataType="common:MUnitWord" ColumnDefinitions="Auto,*,Auto">
                                <StackLayout Spacing="2" VerticalOptions="Center">
                                    <Label Text="{x:Bind UNITSTR}" Style="{StaticResource Key=Text1}" />
                                    <Label Text="{x:Bind PARTSTR}" Style="{StaticResource Key=Text1}" />
                                    <Label Text="{x:Bind SEQNUM}" Style="{StaticResource Key=Text1}" />
                                </StackLayout>
                                <StackLayout Grid.Column="1" VerticalOptions="Center">
                                    <Label Text="{x:Bind WORD}" Style="{StaticResource Key=Text2}" />
                                    <Label Text="{x:Bind NOTE}" Style="{StaticResource Key=Text3}" />
                                </StackLayout>
                                <ImageButton Grid.Column="2" Source="{mi:FontAwesomeSolid Icon=AngleRight,IconColor=Red}"
                                                    WidthRequest="20" HeightRequest="20" Clicked="IconButton_Clicked" />
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnItemTapped" CommandParameter="{Binding .}" />
                                </Grid.GestureRecognizers>
                            </Grid>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>
