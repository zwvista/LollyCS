<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LollyMaui.PhrasesTextbookDetailPage"
             Title="Phrases in Textbook(Detail)"
             xmlns:common="clr-namespace:LollyCommon;assembly=LollyCommon"
             x:DataType="common:MUnitPhraseEdit">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Command="{x:Bind Save}" Priority="0" Order="Primary" />
        <ToolbarItem Text="Cancel" Clicked="OnCancel" Priority="1" Order="Primary" />
    </ContentPage.ToolbarItems>
    <ScrollView>
        <StackLayout Padding="10">
            <Label Text="ID:" />
            <Entry Text="{x:Bind ID, Mode=TwoWay}" IsReadOnly="True" />
            <Label Text="TEXTBOOK:" />
            <Entry Text="{x:Bind TEXTBOOKNAME, Mode=TwoWay}" IsReadOnly="True" />
            <Label Text="UNIT:" />
            <Picker ItemsSource="{x:Bind Textbook.Units}" ItemDisplayBinding="{x:Bind Label}" SelectedItem="{x:Bind UNITItem}" />
            <Label Text="PART:" />
            <Picker ItemsSource="{x:Bind Textbook.Parts}" ItemDisplayBinding="{x:Bind Label}" SelectedItem="{x:Bind PARTItem}" />
            <Label Text="SEQNUM:" />
            <Entry Text="{x:Bind SEQNUM, Mode=TwoWay}" Keyboard="Numeric" />
            <Label Text="PHRASEID:" />
            <Entry Text="{x:Bind PHRASEID, Mode=TwoWay}" IsReadOnly="True" />
            <Label Text="PHRASE:" />
            <Entry Text="{x:Bind PHRASE, Mode=TwoWay}" />
            <Label Text="TRANSLATION:" />
            <Entry Text="{x:Bind TRANSLATION, Mode=TwoWay}" />
        </StackLayout>
    </ScrollView>
</ContentPage>
