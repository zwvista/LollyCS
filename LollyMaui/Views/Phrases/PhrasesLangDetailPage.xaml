<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LollyMaui.PhrasesLangDetailPage"
             Title="Phrases in Language(Detail)"
             xmlns:common="clr-namespace:LollyCommon;assembly=LollyCommon"
             x:DataType="common:MLangPhraseEdit">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Command="{x:Bind Save}" Priority="0" Order="Primary" />
        <ToolbarItem Text="Cancel" Clicked="OnCancel" Priority="1" Order="Primary" />
    </ContentPage.ToolbarItems>
    <ScrollView>
        <StackLayout Padding="10">
            <Label Text="ID:" />
            <Entry Text="{x:Bind ID, Mode=TwoWay}" IsReadOnly="True" />
            <Label Text="PHRASE:" />
            <Entry Text="{x:Bind PHRASE, Mode=TwoWay}" />
            <Label Text="TRANSLATION:" />
            <Entry Text="{x:Bind TRANSLATION, Mode=TwoWay}" />
        </StackLayout>
    </ScrollView>
</ContentPage>
