<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Class="LollyMaui.OnlineTextbooksDetailPage"
             Title="Online Textbooks (Detail)"
             xmlns:common="clr-namespace:LollyCommon;assembly=LollyCommon"
             xmlns:mx="http://compiledbindings.com/x"
             mc:Ignorable="mx"
             mx:DataType="common:MOnlineTextbook"
             x:DataType="common:MOnlineTextbook">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Close" Clicked="OnCancel" Priority="0" Order="Primary" />
    </ContentPage.ToolbarItems>
    <ScrollView>
        <StackLayout Padding="10">
            <Label Text="ID:" />
            <Entry Text="{x:Bind ID, Mode=TwoWay}" IsReadOnly="True" />
            <Label Text="TEXTBOOK:" />
            <Entry Text="{x:Bind TEXTBOOKNAME, Mode=TwoWay}" IsReadOnly="True" />
            <Label Text="UNIT:" />
            <Entry Text="{x:Bind UNIT, Mode=TwoWay}" IsReadOnly="True" />
            <Label Text="TITLE:" />
            <Entry Text="{x:Bind TITLE, Mode=TwoWay}" IsReadOnly="True" />
            <Label Text="URL:" />
            <Entry Text="{x:Bind URL, Mode=TwoWay}" IsReadOnly="True" />
        </StackLayout>
    </ScrollView>
</ContentPage>
