<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Class="LollyMaui.LoginPage"
             xmlns:common="clr-namespace:LollyCommon;assembly=LollyCommon"
             x:DataType="common:LoginViewModel"
             Shell.NavBarIsVisible="False">
    <StackLayout Padding="10,0,10,0" VerticalOptions="Center">
        <Label Text="USERNAME:" />
        <Entry Text="{x:Bind USERNAME, Mode=TwoWay}" />
        <Label Text="PASSWORD:" />
        <Entry IsPassword="True" Text="{x:Bind PASSWORD, Mode=TwoWay}" />
        <Button Grid.ColumnSpan="2" Text="Login" Clicked="Button_Clicked"/>
    </StackLayout>
</ContentPage>