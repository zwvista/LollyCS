<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LollyMaui.PatternsDetailPage"
             Title="Patterns in Language(Detail)"
             xmlns:common="clr-namespace:LollyCommon;assembly=LollyCommon"
             x:DataType="common:MPatternEdit">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Command="{x:Bind Save}" Priority="0" Order="Primary" />
        <ToolbarItem Text="Cancel" Clicked="OnCancel" Priority="1" Order="Primary" />
    </ContentPage.ToolbarItems>
    <ScrollView>
        <StackLayout Padding="10">
            <Label Text="ID:" />
            <Entry Text="{x:Bind ID, Mode=TwoWay}" IsReadOnly="True" />
            <Label Text="PATTERN:" />
            <Entry Text="{x:Bind PATTERN, Mode=TwoWay}" />
            <Label Text="TAGS:" />
            <Entry Text="{x:Bind TAGS, Mode=TwoWay}" />
            <Label Text="TITLE:" />
            <Entry Text="{x:Bind TITLE, Mode=TwoWay}" />
            <Label Text="URL:" />
            <Entry Text="{x:Bind URL, Mode=TwoWay}" />
        </StackLayout>
    </ScrollView>
</ContentPage>
