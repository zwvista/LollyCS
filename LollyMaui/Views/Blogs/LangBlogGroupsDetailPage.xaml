<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LollyMaui.LangBlogGroupsDetailPage"
             Title="Language Blog Groups(Detail)"
             xmlns:common="clr-namespace:LollyCommon;assembly=LollyCommon"
             x:DataType="common:MLangBlogGroup">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Close" Clicked="OnCancel" Priority="0" Order="Primary" />
    </ContentPage.ToolbarItems>
    <ScrollView>
        <StackLayout Padding="10">
            <Label Text="ID:" />
            <Entry Text="{x:Bind ID, Mode=TwoWay}" IsReadOnly="True" />
            <Label Text="GROUP:" />
            <Entry Text="{x:Bind GROUPNAME, Mode=TwoWay}" IsReadOnly="True" />
        </StackLayout>
    </ScrollView>
</ContentPage>
